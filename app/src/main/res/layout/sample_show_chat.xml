<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170sp"
    android:gravity="center"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="70sp"
            android:orientation="vertical"
            android:weightSum="2.5"
            android:background="@drawable/rounded_corner"
            android:elevation="10sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/roomname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="TextView"
                    android:padding="0sp"
                    android:layout_marginLeft="20sp"/>
                <TextView
                    android:id="@+id/roomcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Category"
                    android:padding="0sp"/>



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="3sp"
                android:layout_gravity="center"
                android:padding="40sp"
                android:background="@color/gray"
                android:layout_weight="0.001"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/roomlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="TextView"
                    android:layout_marginLeft="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/roomdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="TextView"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:background="@drawable/rounded_corner_brown"
            android:padding="0sp"
            android:layout_marginLeft="10sp"
            android:elevation="10sp"
            android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Enter_talk"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:background="@drawable/ic_ico_talk_btn"

            android:layout_gravity="center"/>



        </LinearLayout>
    <LinearLayout
        android:layout_width="50sp"
        android:layout_height="70sp"
        android:background="@drawable/rounded_corner_lightred"
        android:padding="0sp"
        android:layout_marginLeft="10sp"
        android:elevation="10sp"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exit"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:background="@drawable/ic_ico_exit"

            android:layout_gravity="center"/>



    </LinearLayout>
    </LinearLayout>